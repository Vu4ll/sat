<style>
    #expenseChart {
        max-width: 300px;
        width: 60%;
        margin: 0 auto;
    }
</style>

<div class="container">
    <h2 class="text-center">Giderler</h2>
    <!-- <canvas id="myChart"></canvas> -->
    
    <canvas id="expenseChart"></canvas>

    <a href="/expenses/add" class="btn btn-success mb-3">+ Yeni Gider Ekle</a>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Kategori</th>
                <th>Miktar</th>
                <th>Açıklama</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <% expenses.forEach(expense => { %>
                <tr>
                    <td><%= expense.category %></td>
                    <td>₺<%= expense.amount.toLocaleString(locale, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                    <td><%= expense.description || '-' %></td>
                    <td><%= expense.date %></td>
                    <td>
                        <a href="/expenses/edit/<%= expense._id %>" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="/expenses/delete/<%= expense._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Kira', 'Yemek', 'Ulaşım', 'Eğlence'], // Kategoriler
            datasets: [{
                label: 'Gider Dağılımı',
                data: [500, 300, 150, 100], // Her kategori için veri
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',
                    'rgba(75, 192, 192, 0.5)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'bottom' },
                tooltip: { nabled: true }
            }
        }
    });
</script>
<script src="/js/fetch-expenses.js"></script>