<div class="container">
    <h2 class="text-center">Gider Ekle</h2>
    <% if (messages && messages.error) { %>
        <div class="alert alert-danger text-center">
            <%= messages.error %>
        </div>
    <% } %>
    <form action="/expenses/add" method="post" class="mx-auto mt-3" style="max-width: 500px;" id="expenseForm">
        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select name="category" class="form-control" required>
                <% categories.forEach(category => { %>
                    <option value="<%= category.name %>"><%= category.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Miktar (₺)</label>
            <input type="number" name="amount" class="form-control" id="amount" placeholder="Miktar giriniz" step="0.01" required>
            <div id="errorMessage" class="alert alert-danger mt-2 d-none">Lütfen miktar giriniz.</div>
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea name="description" class="form-control" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Gider Ekle</button>
    </form>
</div>

<style>
    @media (max-width: 768px) {
        form {
            padding: 15px;
        }
    }
</style>
